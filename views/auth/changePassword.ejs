<% layout('layouts/boilerplate')%>

    <section class="flex justify-center ">
        <div
            class="bg-textMutedS grid lg:grid-cols-2 items-center shadow-[0_4px_12px_-5px] shadow-secondary w-full max-w-2xl max-sm:max-w-sm rounded-lg font-[sans-serif] overflow-hidden mx-auto mt-4  text-primary">
            <div class="p-6">
                <form action="/auth/reset-password/<%= user.resetPasswordToken %>?_method=PATCH" method="POST">
                    <h3 class="text-xl font-semibold mb-10">Update Passsword</h3>
                    <div class="grid grid-cols-2 gap-10 mt-5 ">
                        <div class="relative flex items-center col-span-2">
                            <label class="text-sm font-semibold absolute top-[-10px] left-0" for="url">Your Provided
                                Email</label>
                            <input value="<%= user.email %>" type="email" id="email" name="email" type="text" required
                                placeholder="email"
                                class="text-textMuted px-2 pt-5  pb-2 bg-transparent c-transition w-full text-md border-b-2 border-textMuted focus:border-primary outline-none"
                                disabled />
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                                class="size-3 absolute right-2 bottom-2">
                                <path
                                    d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
                                <path
                                    d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
                            </svg>
                        </div>
                        <% if (currentUser){ %>
                            <div class="relative flex items-center col-span-2">
                                <label class="text-sm font-semibold absolute top-[-10px] left-0" for="url">Old
                                    Password</label>
                                <input type="password" id="old-password" name="oldPassword" type="password" required
                                    placeholder="password"
                                    class="text-textMuted px-2 input-password pt-5 pb-2 bg-transparent c-transition w-full text-md border-b-2 border-textMuted focus:border-primary outline-none" />
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                                    class="cursor-pointer c-transition size-3 absolute right-2 bottom-2" id="eye">
                                    <path d="M8 9.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3Z" />
                                    <path fill-rule="evenodd"
                                        d="M1.38 8.28a.87.87 0 0 1 0-.566 7.003 7.003 0 0 1 13.238.006.87.87 0 0 1 0 .566A7.003 7.003 0 0 1 1.379 8.28ZM11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                                        clip-rule="evenodd" />
                                    <path class="hidden" fill-rule="evenodd"
                                        d="M3.28 2.22a.75.75 0 0 0-1.06 1.06l10.5 10.5a.75.75 0 1 0 1.06-1.06l-1.322-1.323a7.012 7.012 0 0 0 2.16-3.11.87.87 0 0 0 0-.567A7.003 7.003 0 0 0 4.82 3.76l-1.54-1.54Zm3.196 3.195 1.135 1.136A1.502 1.502 0 0 1 9.45 8.389l1.136 1.135a3 3 0 0 0-4.109-4.109Z"
                                        clip-rule="evenodd" />
                                    <path class="hidden"
                                        d="m7.812 10.994 1.816 1.816A7.003 7.003 0 0 1 1.38 8.28a.87.87 0 0 1 0-.566 6.985 6.985 0 0 1 1.113-2.039l2.513 2.513a3 3 0 0 0 2.806 2.806Z" />
                                </svg>
                            </div>
                            <% } %>
                                <div class="relative flex items-center col-span-2">
                                    <label class="text-sm font-semibold absolute top-[-10px] left-0" for="url">New
                                        Password</label>
                                    <input type="password" id="password" name="newPassword" type="password" required
                                        placeholder="password"
                                        class="text-textMuted px-2 input-password pt-5 pb-2 bg-transparent c-transition w-full text-md border-b-2 border-textMuted focus:border-primary outline-none" />
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                                        class="cursor-pointer c-transition size-3 absolute right-2 bottom-2" id="eye">
                                        <path d="M8 9.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3Z" />
                                        <path fill-rule="evenodd"
                                            d="M1.38 8.28a.87.87 0 0 1 0-.566 7.003 7.003 0 0 1 13.238.006.87.87 0 0 1 0 .566A7.003 7.003 0 0 1 1.379 8.28ZM11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                                            clip-rule="evenodd" />
                                        <path class="hidden" fill-rule="evenodd"
                                            d="M3.28 2.22a.75.75 0 0 0-1.06 1.06l10.5 10.5a.75.75 0 1 0 1.06-1.06l-1.322-1.323a7.012 7.012 0 0 0 2.16-3.11.87.87 0 0 0 0-.567A7.003 7.003 0 0 0 4.82 3.76l-1.54-1.54Zm3.196 3.195 1.135 1.136A1.502 1.502 0 0 1 9.45 8.389l1.136 1.135a3 3 0 0 0-4.109-4.109Z"
                                            clip-rule="evenodd" />
                                        <path class="hidden"
                                            d="m7.812 10.994 1.816 1.816A7.003 7.003 0 0 1 1.38 8.28a.87.87 0 0 1 0-.566 6.985 6.985 0 0 1 1.113-2.039l2.513 2.513a3 3 0 0 0 2.806 2.806Z" />
                                    </svg>
                                </div>
                                <div class="relative hidden items-center col-span-2" id="password-helper">
                                    <ul class="px-4 grid sm:grid-cols-2 gap-y-1 gap-x-6 w-max list-disc">
                                        <li class="text-md text-orange-500">minimum 8 characters</li>
                                        <li class="text-md text-orange-500">one uppercase characters</li>
                                        <li class="text-md text-orange-500">one special characters</li>
                                        <li class="text-md text-orange-500">one number</li>
                                    </ul>
                                </div>
                                <div class="relative flex items-center col-span-2">
                                    <label class="text-sm font-semibold absolute top-[-10px] left-0" for="url">Confirm
                                        Passsword</label>
                                    <input type="password" id="confirm-password" name="confirmPassword" type="text"
                                        required placeholder="confirm password"
                                        class="text-textMuted px-2 input-password pt-5 pb-2 bg-transparent c-transition w-full text-md border-b-2 border-textMuted focus:border-primary outline-none" />
                                </div>
                                <div class="relative hidden items-center col-span-2" id="check-password-match">
                                    <ul class="px-4 grid sm:grid-cols-2 gap-y-1 gap-x-6 w-max list-disc">
                                        <li class="text-md text-orange-500">Password not match</li>
                                        <li class="text-md hidden text-green-500">Password match</li>
                                    </ul>
                                </div>
                    </div>
                    <button type="submit"
                        class="c-transition mt-10 mb-8 px-2 py-2.5 w-full rounded-sm text-sm bg-textMuted hover:bg-primary text-textMutedS">Submit</button>

                </form>

            </div>
            <div class="min-h-[280px] h-full hidden lg:block bg-textMuted">
                <img src="https://24sevensocial.com/app/uploads/2022/05/24SevenSocial-hero-section-shortener.png"
                    class="w-full h-full object-cover" />
            </div>
        </div>
    </section>

    <script src="/javascript/authForm.js"></script>