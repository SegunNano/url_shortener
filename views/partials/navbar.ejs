<nav class="c-transition toggle-theme navbar">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto py-2 px-4">
        <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
            <span id="brand-name"
                class="self-center text-2xl font-semibold whitespace-nowrap text-secondary c-transition toggle-theme">nano_url</span>
        </a>
        <div class="flex items-center space-x-3 md:order-2 md:space-x-0 rtl:space-x-reverse">
            <button type="button"
                class="flex c-transition toggle-theme text-lg text-secondary bg-primary rounded-full md:me-0"
                id="user-menu-button" aria-expanded="false" data-dropdown-toggle="user-dropdown"
                data-dropdown-placement="bottom">
                <span class="sr-only">Open user menu</span>
                <div
                    class="flex justify-center items-center p-0 text-center pb-1 text-lg  w-8 h-8 rounded-full hover:bg-secondary hover:text-primary c-transition">
                    <% if (currentUser){%>
                        <%= currentUser.username[0] %>
                            <% } else {%>
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                                    class="size-3 mt-1">
                                    <path fillRule="evenodd"
                                        d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z"
                                        clipRule="evenodd" />
                                </svg>
                                <% } %>
                </div>
            </button>
            <!-- Dropdown menu -->
            <div class="z-50 hidden overflow-hidden my-4 text-base list-none c-transition toggle-theme bg-secondary divide-y divide-primary rounded-lg shadow-sm  absolute right-5 top-7"
                id="user-dropdown">
                <% if (currentUser){%>
                    <div class="px-4 py-3">
                        <span class="block c-transition toggle-theme text-primary">
                            <%= currentUser.username %>
                        </span>
                        <span class="block text-xs c-transition toggle-theme text-textMuted truncate ">
                            <%= currentUser.email %>
                        </span>
                    </div>
                    <ul class="py-2" aria-labelledby="user-menu-button">
                        <li>
                            <a href="/auth/logout"
                                class="block px-4 py-2 text-sm text-primary hover:text-secondary hover:bg-primary c-transition toggle-theme ">Logout</a>
                        </li>
                    </ul>
                    <% } else {%>
                        <ul class="py-2 overflow-hidden" aria-labelledby="user-menu-button">
                            <li>
                                <a href="/auth/login"
                                    class="block px-4 py-2 text-sm text-primary hover:text-secondary hover:bg-primary c-transition toggle-theme">Login</a>
                            </li>
                            <li>
                                <a href="/auth/register"
                                    class="block px-4 py-2 text-sm text-primary hover:text-secondary hover:bg-primary c-transition toggle-theme">Register</a>
                            </li>
                        </ul>
                        <% } %>


            </div>
        </div>
        <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-user">
        </div>
    </div>
</nav>