<% layout('layouts/boilerplate')%>

    <div class="notify-container"></div>
    <section class="flex justify-center ">
        <div class=" py-3 border-secondary border-4 w-[80%]  lg:w-[70%] md:px-6 c-transition ">
            <div class=" text-secondary c-transition  max-w-4xl mx-auto px-6 my-6" action="/dev_nano">
                <h1 class="text-2xl md:text-3xl text-secondary text-center drop-shadow-lg c-transition font-bold m-5 ">
                    Link Info</h1>

                <div class="relative flex items-center mx-auto my-10 shadow-[0_4px_12px_-5px] shadow-secondary">
                    <label
                        class="text-md bg-textMuted text-secondary absolute px-2 top-[-20px] left-[18px] shadow-[0_4px_12px_-5px] shadow-secondary">Destination
                        Link</label>
                    <input type="text" disabled
                        class="copy pl-4 pr-12 py-3.5 bg-textMuted text-secondary w-full text-sm border-2 border-secondary rounded outline-none"
                        value="<%= existingUrl.originalUrl %>" />
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                        class="size-3 absolute right-4 copy-btn cursor-pointer">
                        <path fill-rule="evenodd"
                            d="M11.986 3H12a2 2 0 0 1 2 2v6a2 2 0 0 1-1.5 1.937V7A2.5 2.5 0 0 0 10 4.5H4.063A2 2 0 0 1 6 3h.014A2.25 2.25 0 0 1 8.25 1h1.5a2.25 2.25 0 0 1 2.236 2ZM10.5 4v-.75a.75.75 0 0 0-.75-.75h-1.5a.75.75 0 0 0-.75.75V4h3Z"
                            clip-rule="evenodd" />
                        <path fill-rule="evenodd"
                            d="M3 6a1 1 0 0 0-1 1v7a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1H3Zm1.75 2.5a.75.75 0 0 0 0 1.5h3.5a.75.75 0 0 0 0-1.5h-3.5ZM4 11.75a.75.75 0 0 1 .75-.75h3.5a.75.75 0 0 1 0 1.5h-3.5a.75.75 0 0 1-.75-.75Z"
                            clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="relative flex items-center mx-auto my-10 shadow-[0_4px_12px_-5px] shadow-secondary">
                    <label
                        class="text-md bg-textMuted text-secondary absolute px-2 top-[-20px] left-[18px] shadow-[0_4px_12px_-5px] shadow-secondary">Short
                        Link</label>
                    <input type="text" disabled
                        class="copy pl-4 pr-12 py-3.5 bg-textMuted text-secondary w-full text-sm border-2 border-secondary rounded outline-none"
                        value="<%= existingUrl.shortenedUrl %>" />
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                        class="size-3 absolute right-4 copy-btn cursor-pointer">
                        <path fill-rule="evenodd"
                            d="M11.986 3H12a2 2 0 0 1 2 2v6a2 2 0 0 1-1.5 1.937V7A2.5 2.5 0 0 0 10 4.5H4.063A2 2 0 0 1 6 3h.014A2.25 2.25 0 0 1 8.25 1h1.5a2.25 2.25 0 0 1 2.236 2ZM10.5 4v-.75a.75.75 0 0 0-.75-.75h-1.5a.75.75 0 0 0-.75.75V4h3Z"
                            clip-rule="evenodd" />
                        <path fill-rule="evenodd"
                            d="M3 6a1 1 0 0 0-1 1v7a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1H3Zm1.75 2.5a.75.75 0 0 0 0 1.5h3.5a.75.75 0 0 0 0-1.5h-3.5ZM4 11.75a.75.75 0 0 1 .75-.75h3.5a.75.75 0 0 1 0 1.5h-3.5a.75.75 0 0 1-.75-.75Z"
                            clip-rule="evenodd" />
                    </svg>
                </div>

                <div id="notifications" style="display: none;">

                    <div class="notify notify--success">
                        <svg style="width: 30px;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                            stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z" />
                        </svg>
                        <p> Link copied succesfully.</p>
                        <button type="button" class="notify__close" data-dismiss="notify" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    </div>
                </div>
            </div>
    </section>
    <script src="/javascript/notfication.js"></script>